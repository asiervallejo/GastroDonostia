{% extends 'base.html.twig' %}

{% block title %}Platos Típicos{% endblock %}

{% block body %}

    <section class="col-6 d-none" id="formPlato" name="formPlato">

      <form method="POST" action="{{path('platos.crear')}}" class="form">
        <div class="form-group">
          <label for="txtNombre">Nombre</label>
          <input type="text" class="form-control" id="txtNombre" name="txtNombre" aria-describedby="Nombre" placeholder="Introduce un nombre">
        </div>
        <div class="form-group">
          <label for="txtDescripcion">Descripcion</label>
          <textarea type="text" class="form-control" id="txtDescripcion" name="txtDescripcion" aria-describedby="Descripcion" placeholder="Introduce un descripcion" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="txtPrecio">Precio</label>
          <input type="number" class="form-control" id="txtPrecio" name="txtPrecio" aria-describedby="Precio" placeholder="Introduce un precio">
        </div>
        <div class="form-group">
          <label for="txtImagen">Imagen</label>
          <input type="text" class="form-control" id="txtImagen" name="txtImagen" aria-describedby="Imagen" placeholder="Introduce una imagen">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>


    <section id="menu" class="menu section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <p>Aprecie los platos tipicos</p>
        </div>
                <nav class=" container nav-menu d-none d-lg-block">
            <ul class="mx-auto justify-content-center">
              <li class="book-a-table text-center"><a id="btnAgregar" name="btnAgregar" href="{{path('platos.formPlatos')}}">Agregar Plato</a></li>
            </ul>
        </nav>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
            <ul id="menu-flters">
              <li data-filter="*" class="filter-active">Todos</li>
              <li data-filter=".filter-starters">Entrantes</li>
              <li data-filter=".filter-salads">Platos Principales</li>
              <li data-filter=".filter-specialty">Especialidades de la casa</li>
            </ul>
          </div>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">

          {% for plato in platos %}
              <div class="col-lg-6 menu-item filter-specialty">
                <img src="/assets/img/menu/{{plato.imagen}}" class="menu-img" alt="">
                <div class="menu-content">
                  <a href="{{path('platos.mostrar',{id: plato.id})}}">{{plato.nombre}}</a><span>{{plato.precio}}€</span>
                </div>
                <div class="menu-ingredients">
                  {{plato.descripcion}}
                </div>
                <nav class="container nav-menu d-none d-lg-block">
                    <ul class="mx-auto justify-content-center">
                      <li class="book-a-table text-center"><a id="btnEliminar" name="btnEliminar" href="{{path('platos.eliminar', {id: plato.id})}}">Eliminar Plato</a></li>
                      <li class="book-a-table text-center"><a id="btnEditar" name="btnEditar" href="{{path('platos.editar', {id: plato.id})}}">Editar Plato</a></li>
                    </ul>
                </nav>
              </div>
          {% endfor %}

        </div>
      </div>
    </section><!-- End Menu Section -->

{% endblock %}
